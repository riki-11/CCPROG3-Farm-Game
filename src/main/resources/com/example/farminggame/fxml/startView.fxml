<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:id="startView"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="startBackground">

    <Text id="welcome-text" text="Welcome to Ed's Farming Game"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="3" styleClass="farmText,gameFont"/>

    <Label text="Please enter your farmer name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="farmText,gameFont"/>

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="startButton" text="Start Game"/>
    </HBox>

    <Text fx:id="actiontarget" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@../stylesheets/Login.css"/>
    </stylesheets>
</GridPane>

