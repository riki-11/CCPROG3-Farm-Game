<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="farmView" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <FlowPane>
            <Button fx:id="btn1" styleClass="img-button, farmer-icon"/>
            <Text styleClass="farmerInformation" fx:id="nameDisplay">
                <FlowPane.margin>
                    <Insets left="10.0" right="10.0" />
                </FlowPane.margin>
            </Text>
            <Text styleClass="farmerInformation" fx:id="levelDisplay">
                <FlowPane.margin>
                    <Insets left="10.0" right="10.0" />
                </FlowPane.margin>
            </Text>
            <Text styleClass="farmerInformation" fx:id="balanceDisplay">
                <FlowPane.margin>
                    <Insets left="10.0" right="10.0" />
                </FlowPane.margin>
            </Text>

        </FlowPane>

    </top>

    <left><TextField text="left" /></left>

    <center>
        <GridPane alignment="center">
            <!-- Column Span is an arbitrarily large number to let it take up the remaining columns as needed -->
            <Button fx:id="plantTurnipBtn" styleClass="img-button, default-tile" alignment="center"
                    GridPane.columnSpan="1000"/>

            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Button fx:id="resetBtn" text="Reset Tile" />
            </HBox>

            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Button fx:id="exitBtn" text="Return to Main Menu" />
            </HBox>

        </GridPane>
    </center>

    <right><TextField text="Right" />
    </right>
    <bottom><TextField text="Bottom" /></bottom>

    <stylesheets>
        <URL value="@../stylesheets/Farm.css" />
    </stylesheets>
</BorderPane>
